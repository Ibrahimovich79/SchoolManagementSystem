@page
@model SchoolManagementSystem.Pages.Students.CreateModel
@{
    ViewData["Title"] = "Add New Student";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Add New Student</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-page="/Students">Students</a></li>
        <li class="breadcrumb-item active">Add New</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-plus me-1"></i>
            New Student Details
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Student.StdName" class="form-control" placeholder="Enter full name" />
                            <label asp-for="Student.StdName">Student Name</label>
                            <span asp-validation-for="Student.StdName" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Student.UserName" class="form-control" placeholder="Enter username" />
                            <label asp-for="Student.UserName">Username</label>
                            <span asp-validation-for="Student.UserName" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <select asp-for="Student.GradeId" class ="form-select" asp-items="ViewBag.GradeId">
                                <option value="">-- Select Grade --</option>
                            </select>
                            <label asp-for="Student.GradeId">Grade</label>
                            <span asp-validation-for="Student.GradeId" class="text-danger"></span>
                        </div>
                    </div>
                     <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Student.StdNationality" class="form-control" placeholder="Nationality" />
                            <label asp-for="Student.StdNationality">Nationality</label>
                             <span asp-validation-for="Student.StdNationality" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <!-- Type="number" prevents letters client-side -->
                            <input asp-for="Student.StdMobile" type="number" class="form-control" placeholder="Mobile 1" />
                            <label asp-for="Student.StdMobile">Mobile Number</label>
                            <span asp-validation-for="Student.StdMobile" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                             <!-- Type="number" prevents letters client-side -->
                            <input asp-for="Student.Mobile2" type="number" class="form-control" placeholder="Mobile 2" />
                            <label asp-for="Student.Mobile2">Second Mobile</label>
                            <span asp-validation-for="Student.Mobile2" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                 <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Student.BusNo" type="number" class="form-control" placeholder="Bus No" />
                            <label asp-for="Student.BusNo">Bus Number</label>
                             <span asp-validation-for="Student.BusNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                 <div class="row mb-3">
                    <div class="col-md-4">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Student.StdSeat" type="number" class="form-control" placeholder="Seat No" />
                            <label asp-for="Student.StdSeat">Seat Number</label>
                             <span asp-validation-for="Student.StdSeat" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Student.StdCode" type="number" class="form-control" placeholder="Code" />
                            <label asp-for="Student.StdCode">Student Code</label>
                             <span asp-validation-for="Student.StdCode" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                
                 <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Student.OldSchool" class="form-control" placeholder="Old School" />
                            <label asp-for="Student.OldSchool">Old School</label>
                             <span asp-validation-for="Student.OldSchool" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                         <div class="form-floating">
                            <input asp-for="Student.OldBranche" class="form-control" placeholder="Old Branch" />
                            <label asp-for="Student.OldBranche">Old Branch</label>
                             <span asp-validation-for="Student.OldBranche" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Student.Note" class="form-control" placeholder="Leave a note here" />
                    <label asp-for="Student.Note">Notes</label>
                     <span asp-validation-for="Student.Note" class="text-danger"></span>
                </div>

                <div class="mt-4 mb-0">
                    <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Create User</button></div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small"><a asp-page="/Students">Back to List</a></div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
