@page
@model SchoolManagementSystem.Pages.Teachers.CreateModel
@{
    ViewData["Title"] = "Add New Teacher";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Add New Teacher</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-page="/Teachers">Teachers</a></li>
        <li class="breadcrumb-item active">Add New</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-chalkboard-teacher me-1"></i>
            New Teacher Details
        </div>
        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Teacher.TeachName" class="form-control" placeholder="Enter full name" />
                            <label asp-for="Teacher.TeachName">Teacher Name</label>
                            <span asp-validation-for="Teacher.TeachName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <input asp-for="Teacher.TeachMobile" type="number" class="form-control" placeholder="Mobile" />
                            <label asp-for="Teacher.TeachMobile">Mobile Number</label>
                            <span asp-validation-for="Teacher.TeachMobile" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-floating mb-3 mb-md-0">
                            <input asp-for="Teacher.StaffId" type="number" class="form-control" placeholder="Staff ID" />
                            <label asp-for="Teacher.StaffId">Staff ID</label>
                            <span asp-validation-for="Teacher.StaffId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating">
                            <!-- Input number prevents text -->
                            <input asp-for="Teacher.CousreId" type="number" class="form-control" placeholder="Course ID" />
                            <label asp-for="Teacher.CousreId">Course ID</label>
                            <span asp-validation-for="Teacher.CousreId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="mt-4 mb-0">
                    <div class="d-grid"><button class="btn btn-primary btn-block" type="submit">Create Teacher</button></div>
                </div>
            </form>
        </div>
        <div class="card-footer text-center py-3">
            <div class="small"><a asp-page="/Teachers">Back to List</a></div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
