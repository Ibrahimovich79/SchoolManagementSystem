@page
@model SchoolManagementSystem.Pages.Teachers.ClassDetailsModel
@{
    ViewData["Title"] = "تفاصيل الصف";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1>@Model.ClassName</h1>
        <form method="get" class="d-flex align-items-center">
            <input type="hidden" name="gradeId" value="@Model.GradeId" />
            <label class="me-2 fw-bold">التاريخ:</label>
            @if (User.IsInRole("Teacher") && !User.IsInRole("Admin") && !User.IsInRole("Supervisor"))
            {
                <input type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" disabled />
                <input type="hidden" asp-for="AttendanceDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            }
            else
            {
                <input type="date" asp-for="AttendanceDate" class="form-control" onchange="this.form.submit()" />
            }
        </form>
    </div>
    
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">لوحة التحكم</a></li>
        <li class="breadcrumb-item active">تفاصيل الصف</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            قائمة الطلاب
        </div>
        <div class="card-body">
            <form method="post" id="attendanceForm">
                <input type="hidden" asp-for="GradeId" />
                <input type="hidden" asp-for="AttendanceDate" />

                <div class="table-responsive">
                    <table class="table table-striped table-bordered align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>الرقم الشخصي (QID)</th>
                                <th>اسم الطالب</th>
                                <th>المواصلات</th>
                                <th>ملاحظات</th>
                                <th class="text-center">غائب</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Students.Any())
                            {
                                @foreach (var student in Model.Students)
                                {
                                    <tr>
                                        <td>@student.StudentId</td>
                                        <td>@student.Name</td>
                                        <td>
                                            @if(student.TransportType == "Bus")
                                            {
                                                <span class="badge bg-warning text-dark"><i class="fas fa-bus"></i> حافلة (@student.BusNo)</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary"><i class="fas fa-car"></i> سيارة</span>
                                            }
                                        </td>
                                        <td>@student.Note</td>
                                        <td class="text-center">
                                            <div class="form-check form-switch d-flex justify-content-center">
                                                <input class="form-check-input attendance-checkbox" type="checkbox" 
                                                       name="AbsentStudentIds" 
                                                       value="@student.StudentId" 
                                                       @(student.IsAbsent ? "checked" : "")
                                                       style="width: 3em; height: 1.5em; cursor: pointer;" />
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">لا يوجد طلاب في هذا الصف.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                
                <div class="mt-4">
                    <button type="button" class="btn btn-primary btn-lg px-5" id="btnSaveAttendance">
                        <i class="fas fa-save"></i> حفظ الحضور
                    </button>
                    <button type="submit" class="d-none" id="realSubmitBtn"></button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Attendance Confirmation Modal -->
<div class="modal fade" id="confirmAttendanceModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="confirmModalLabel">تأكيد تسجيل غياب (<span id="absentCountText">0</span>) طلاب</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="fw-bold text-primary mb-3">سيتم تسجيل غياب الطلاب التالية أسماؤهم:</p>
                <div id="absentNamesList" class="p-3 bg-light rounded border mb-3" style="max-height: 300px; overflow-y: auto;">
                    <!-- Names list populated by JS -->
                </div>
                <p class="mb-0">هل أنت متأكد من الاعتماد؟</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">تراجع</button>
                <button type="button" class="btn btn-primary" id="confirmSubmitBtn">تأكيد</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let isDirty = false;
            const form = document.getElementById('attendanceForm');
            const checkboxes = document.querySelectorAll('.attendance-checkbox');
            const btnSave = document.getElementById('btnSaveAttendance');
            const confirmModal = new bootstrap.Modal(document.getElementById('confirmAttendanceModal'));
            const confirmSubmitBtn = document.getElementById('confirmSubmitBtn');

            // Track changes
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => {
                    isDirty = true;
                });
            });

            // Handle Save Button click - Show Modal
            btnSave.addEventListener('click', function() {
                const selectedCheckboxes = document.querySelectorAll('.attendance-checkbox:checked');
                const count = selectedCheckboxes.length;
                
                if (count === 0) {
                    if (!confirm("لم يتم اختيار أي طالب غائب. هل تريد حفظ الكشف فارغاً؟")) {
                        return;
                    }
                    document.getElementById('realSubmitBtn').click();
                    return;
                }

                // Update Modal Content
                document.getElementById('absentCountText').textContent = count;
                const namesList = document.getElementById('absentNamesList');
                namesList.innerHTML = '';
                
                const ul = document.createElement('ul');
                ul.className = 'list-unstyled mb-0';
                
                selectedCheckboxes.forEach(cb => {
                    const row = cb.closest('tr');
                    const studentName = row.cells[1].textContent.trim();
                    const li = document.createElement('li');
                    li.className = 'mb-1';
                    li.innerHTML = `<i class="fas fa-user-minus text-danger me-2"></i> ${studentName}`;
                    ul.appendChild(li);
                });
                
                namesList.appendChild(ul);
                confirmModal.show();
            });

            // Real submit from Modal
            confirmSubmitBtn.addEventListener('click', function() {
                isDirty = false;
                confirmModal.hide();
                document.getElementById('realSubmitBtn').click();
            });

            // Handle navigation prevention
            window.addEventListener('beforeunload', function (e) {
                if (isDirty) {
                    const message = 'لديك تغييرات غير محفوظة في كشف الحضور. يرجى الحفظ قبل المغادرة.';
                    e.returnValue = message;
                    return message;
                }
            });
        });
    </script>
}
