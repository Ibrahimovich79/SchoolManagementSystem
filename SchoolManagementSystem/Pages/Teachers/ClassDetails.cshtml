@page
@model SchoolManagementSystem.Pages.Teachers.ClassDetailsModel
@{
    ViewData["Title"] = "Class Details";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mt-4">
        <h1>@Model.ClassName</h1>
        <form method="get" class="d-flex align-items-center">
            <input type="hidden" name="gradeId" value="@Model.GradeId" />
            <label class="me-2 fw-bold">Date:</label>
            @if (User.IsInRole("Teacher") && !User.IsInRole("Admin") && !User.IsInRole("Supervisor"))
            {
                <input type="date" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" disabled />
                <input type="hidden" asp-for="AttendanceDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
            }
            else
            {
                <input type="date" asp-for="AttendanceDate" class="form-control" onchange="this.form.submit()" />
            }
        </form>
    </div>
    
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item active">Class Details</li>
    </ol>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table me-1"></i>
            Student List
        </div>
        <div class="card-body">
            <form method="post" id="attendanceForm">
                <input type="hidden" asp-for="GradeId" />
                <input type="hidden" asp-for="AttendanceDate" />

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Student ID (QID)</th>
                            <th>Student Name</th>
                            <th>Transport</th>
                            <th>Notes</th>
                            <th>Absent</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Students.Any())
                        {
                            @foreach (var student in Model.Students)
                            {
                                <tr>
                                    <td>@student.StudentId</td>
                                    <td>@student.Name</td>
                                    <td>
                                        @if(student.TransportType == "Bus")
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-bus"></i> Bus (@student.BusNo)</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary"><i class="fas fa-car"></i> Car</span>
                                        }
                                    </td>
                                    <td>@student.Note</td>
                                    <td class="text-center">
                                        <div class="form-check d-flex justify-content-center">
                                            <input class="form-check-input attendance-checkbox" type="checkbox" 
                                                   name="AbsentStudentIds" 
                                                   value="@student.StudentId" 
                                                   @(student.IsAbsent ? "checked" : "") />
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted">No students found in this class.</td>
                            </tr>
                        }
                    </tbody>
                </table>
                
                <div class="mt-3">
                    <button type="submit" class="btn btn-primary" id="btnSave">
                        <i class="fas fa-save"></i> Save Attendance
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let isDirty = false;
            const form = document.getElementById('attendanceForm');
            const checkboxes = document.querySelectorAll('.attendance-checkbox');

            // Track changes
            checkboxes.forEach(checkbox => {
                checkbox.addEventListener('change', () => {
                    isDirty = true;
                });
            });

            // Handle navigation prevention
            window.addEventListener('beforeunload', function (e) {
                if (isDirty) {
                    const message = 'You have unsaved attendance changes. Please save before leaving.';
                    e.returnValue = message;
                    return message;
                }
            });

            // Prevent check on submit
            form.addEventListener('submit', function () {
                isDirty = false;
            });
        });
    </script>
}
