@page
@model SchoolManagementSystem.Pages.StudentsModel
@{
    ViewData["Title"] = "قائمة الطلاب";
}

<div class="container-fluid px-4 mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">لوحة التحكم</a></li>
            <li class="breadcrumb-item active" aria-current="page">قائمة الطلاب</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center mb-3">
        <a asp-page="/Index" class="btn btn-outline-secondary ms-2" title="العودة للرئيسية">
            <i class="fas fa-home"></i>
        </a>
        <h1 class="mb-0">قائمة الطلاب</h1>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
            <a asp-page="./Students/Create" class="btn btn-success"><i class="fas fa-plus"></i> إضافة طالب جديد</a>
    }
    
    <div class="card my-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchString" value="@Model.CurrentFilter" class="form-control" placeholder="بحث بالاسم أو الرقم الشخصي..." />
                </div>
                <div class="col-md-3">
                    <select name="gradeId" class="form-select" asp-items="ViewBag.GradeList">
                        <option value="">-- جميع الصفوف --</option>
                        @if(!string.IsNullOrEmpty(Model.CurrentGradeFilter)) {
                            // ...
                        } 
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">بحث</button>
                </div>
                <div class="col-md-2">
                    <a asp-page="./Students" class="btn btn-secondary w-100">إعادة تعيين</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Students != null && Model.Students.Any())
    {
        <table class="table table-striped table-hover w-100" style="table-layout: auto;">
            <thead>
                <tr>
                    <th scope="col" style="width: 130px;" class="text-right">
                        <a asp-page="./Students" asp-route-sortOrder="@Model.IdSort">الرقم الشخصي @(Model.CurrentSort == "id_desc" ? "↓" : "↑")</a>
                    </th>
                    <th scope="col" style="width: 400px;" class="text-right">
                        <a asp-page="./Students" asp-route-sortOrder="@Model.NameSort">الاسم @(Model.CurrentSort == "name_desc" ? "↓" : "↑")</a>
                    </th>
                    <th scope="col" style="width: 150px;" class="text-right">اسم المستخدم</th>
                    <th scope="col" style="width: 160px; white-space: nowrap;" class="text-right">
                        <a asp-page="./Students" asp-route-sortOrder="@Model.GradeSort">الصف @(Model.CurrentSort == "grade_desc" ? "↓" : "↑")</a>
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                    {
                        <th scope="col" style="width: 280px;" class="text-right">الجنسية</th>
                        <th scope="col" style="width: 150px;" class="text-right">الجوال</th>
                    }
                    <th scope="col" style="width: 80px;" class="text-right">رقم الحافلة</th>
                    <th scope="col" style="width: 80px;" class="text-center">الإجراءات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.Qid</td>
                        <td>@student.StdName</td>
                        <td>@student.UserName</td>
                        <td>@student.StdGradeNavigation?.GradeName</td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                        {
                            <td>@student.StdNationality</td>
                            <td>@student.StdMobile</td>
                        }
                        <td>@student.BusNo</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Students/Details" asp-route-id="@student.Qid" class="btn btn-sm btn-primary" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@student.Qid" class="d-inline ms-1" onsubmit="return confirm('هل أنت متأكد من حذف هذا الطالب؟');">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                        </form>
                                    }
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">لم يتم العثور على طلاب.</div>
    }
</div>