@page
@model SchoolManagementSystem.Pages.StudentsModel
@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <h1>Students List</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
            <a asp-page="./Students/Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New Student</a>
    }

    @if (Model.Students != null && Model.Students.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        <a asp-page="./Students" asp-route-sortOrder="@Model.IdSort">Student ID @(Model.CurrentSort == "id_desc" ? "↓" : "↑")</a>
                    </th>
                    <th>
                        <a asp-page="./Students" asp-route-sortOrder="@Model.NameSort">Name @(Model.CurrentSort == "name_desc" ? "↓" : "↑")</a>
                    </th>
                    <th>Username</th>
                    <th>
                        <a asp-page="./Students" asp-route-sortOrder="@Model.GradeSort">Grade @(Model.CurrentSort == "grade_desc" ? "↓" : "↑")</a>
                    </th>
                    <th>
                        <a asp-page="./Students" asp-route-sortOrder="@Model.ClassSort">Classroom @(Model.CurrentSort == "class_desc" ? "↓" : "↑")</a>
                    </th>
                        <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.Qid</td>
                        <td>@student.StdName</td>
                        <td>@student.UserName</td>
                        <td>@student.StdGrade</td>
                        <td>@student.ClassRoom</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Students/Details" asp-route-id="@student.Qid" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@student.Qid" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this student?');">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                        </form>
                                    }
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No students found.</div>
    }
</div>