@page
@model SchoolManagementSystem.Pages.StudentsModel
@{
    ViewData["Title"] = "Students";
}

<div class="container-fluid px-4 mt-4">
    <h1>Students List</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
            <a asp-page="./Students/Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New Student</a>
    }
    
    <div class="card my-3">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchString" value="@Model.CurrentFilter" class="form-control" placeholder="Search by Name or ID..." />
                </div>
                <div class="col-md-3">
                    <select name="gradeId" class="form-select" asp-items="ViewBag.GradeList">
                        <option value="">-- All Grades --</option>
                        @if(!string.IsNullOrEmpty(Model.CurrentGradeFilter)) {
                            // ...
                        } 
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
                <div class="col-md-2">
                    <a asp-page="./Students" class="btn btn-secondary w-100">Reset</a>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Students != null && Model.Students.Any())
    {
        <table class="table table-striped table-hover w-100" style="table-layout: auto;">
            <thead>
                <tr>
                    <th scope="col" style="width: 130px;">
                        <a asp-page="./Students" asp-route-sortOrder="@Model.IdSort">Student ID @(Model.CurrentSort == "id_desc" ? "↓" : "↑")</a>
                    </th>
                    <th scope="col" style="width: 400px;">
                        <a asp-page="./Students" asp-route-sortOrder="@Model.NameSort">Name @(Model.CurrentSort == "name_desc" ? "↓" : "↑")</a>
                    </th>
                    <th scope="col" style="width: 150px;">Username</th>
                    <th scope="col" style="width: 160px; white-space: nowrap;">
                        <a asp-page="./Students" asp-route-sortOrder="@Model.GradeSort">Class @(Model.CurrentSort == "grade_desc" ? "↓" : "↑")</a>
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                    {
                        <th scope="col" style="width: 280px;">Nationality</th>
                        <th scope="col" style="width: 150px;">Mobile</th>
                    }
                    <th scope="col" style="width: 80px;">Bus No</th>
                    <th scope="col" style="width: 80px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model.Students)
                {
                    <tr>
                        <td>@student.Qid</td>
                        <td>@student.StdName</td>
                        <td>@student.UserName</td>
                        <td>@student.StdGradeNavigation?.GradeName</td>
                        @if (User.IsInRole("Admin") || User.IsInRole("Supervisor"))
                        {
                            <td>@student.StdNationality</td>
                            <td>@student.StdMobile</td>
                        }
                        <td>@student.BusNo</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Students/Details" asp-route-id="@student.Qid" class="btn btn-sm btn-primary" title="Details">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@student.Qid" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this student?');">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                        </form>
                                    }
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No students found.</div>
    }
</div>