@page
@model SchoolManagementSystem.Pages.Admin.Users.CreateModel
@{
    ViewData["Title"] = "Create User";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Create New User</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
        <li class="breadcrumb-item"><a asp-page="Index">Users</a></li>
        <li class="breadcrumb-item active">Create</li>
    </ol>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user-plus me-1"></i>
                    New User Details
                </div>
                <div class="card-body">
                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label">Email Address</label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label">Password</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Role" class="form-label">Role</label>
                            <select asp-for="Input.Role" asp-items="Model.Roles" class="form-select" id="roleSelect">
                                <option value="">-- Select Role --</option>
                            </select>
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="teacherSelectDiv" style="display:none;">
                            <label asp-for="Input.TeacherId" class="form-label">Select Teacher</label>
                            <select asp-for="Input.TeacherId" asp-items="@ViewBag.Teachers" class="form-select">
                                <option value="">-- Select Teacher --</option>
                            </select>
                            <span asp-validation-for="Input.TeacherId" class="text-danger"></span>
                            <div class="form-text">Associate this account with an existing teacher.</div>
                        </div>

                        <div class="mb-3" id="studentSelectDiv" style="display:none;">
                            <label asp-for="Input.StudentId" class="form-label">Select Student</label>
                            <select asp-for="Input.StudentId" asp-items="@ViewBag.Students" class="form-select">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="Input.StudentId" class="text-danger"></span>
                            <div class="form-text">Associate this account with an existing student.</div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">Create User</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var roleSelect = document.getElementById("roleSelect");
            var teacherDiv = document.getElementById("teacherSelectDiv");
            var studentDiv = document.getElementById("studentSelectDiv");

            function toggleSelects() {
                var role = roleSelect.value;
                
                // Reset
                teacherDiv.style.display = "none";
                studentDiv.style.display = "none";

                if (role === "Teacher" || role === "Supervisor") {
                    teacherDiv.style.display = "block";
                } else if (role === "Student") {
                    studentDiv.style.display = "block";
                }
            }

            // Initial check
            toggleSelects();

            // Check on change
            roleSelect.addEventListener("change", toggleSelects);
        });
    </script>
}
