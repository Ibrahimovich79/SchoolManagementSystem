@page
@model SchoolManagementSystem.Pages.Admin.Attendance.DailyReportModel
@{
    ViewData["Title"] = "تقرير الحضور والغياب اليومي";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        #printableArea, #printableArea * {
            visibility: visible;
        }
        #printableArea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .no-print {
            display: none !important;
        }
        .badge {
            border: 1px solid #000 !important;
            color: #000 !important;
            background: #fff !important;
        }
    }
</style>

<div class="container-fluid px-4">
    <nav aria-label="breadcrumb" class="mt-4 no-print">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">لوحة التحكم</a></li>
            <li class="breadcrumb-item"><a asp-page="/Admin/Attendance/Index" class="text-decoration-none">إدارة الغياب</a></li>
            <li class="breadcrumb-item active" aria-current="page">تقرير مفصل</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center mb-3 no-print">
        <a asp-page="/Admin/Attendance/Index" class="btn btn-outline-secondary ms-2" title="العودة لصفحة الغياب">
            <i class="fas fa-home"></i>
        </a>
        <h1 class="mb-0">تقرير الحضور والغياب المفصل</h1>
    </div>
    
    <div class="card mb-4 no-print shadow-sm">
        <div class="card-header">
            <i class="fas fa-filter ms-1"></i>
            فلاتر البحث
        </div>
        <div class="card-body">
            <div class="row g-3 align-items-end">
                <form method="get" class="col-md-8">
                    <div class="row g-3 align-items-end">
                        <div class="col-md-3">
                            <label class="form-label fw-bold">التاريخ:</label>
                            <input type="date" asp-for="ReportDate" class="form-control" />
                        </div>
                        <div class="col-md-3">
                            <label class="form-label fw-bold">الحالة:</label>
                            <select asp-for="StatusFilter" class="form-select">
                                <option value="">-- الكل --</option>
                                <option value="Present">حاضر فقط</option>
                                <option value="Absent">غائب فقط</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-bold">الصف:</label>
                            <select asp-for="ClassFilter" asp-items="Model.ClassList" class="form-select">
                                <option value="">-- جميع الصفوف --</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="fas fa-search ms-1"></i> بحث
                            </button>
                        </div>
                    </div>
                </form>
                <div class="col-md-2">
                    <button type="button" class="btn btn-secondary w-100" onclick="window.print()">
                        <i class="fas fa-print ms-1"></i> طباعة
                    </button>
                </div>
                <div class="col-md-2">
                    <form method="post" asp-page-handler="Export">
                        <input type="hidden" name="reportDate" value="@Model.ReportDate.ToString("yyyy-MM-dd")" />
                        <input type="hidden" name="statusFilter" value="@Model.StatusFilter" />
                        <input type="hidden" name="classFilter" value="@Model.ClassFilter" />
                        <button type="submit" class="btn btn-success w-100">
                            <i class="fas fa-file-excel ms-1"></i> تصدير (Excel)
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div id="printableArea">
        <div class="text-center mb-4 d-none d-print-block">
            <h2>تقرير حضور وغياب الطلاب اليومي</h2>
            <h4>التاريخ: @Model.ReportDate.ToString("yyyy/MM/dd")</h4>
            @if (!string.IsNullOrEmpty(Model.StatusFilter))
            {
                <p><strong>الحالة:</strong> @(Model.StatusFilter == "Absent" ? "غائب" : "حاضر")</p>
            }
            @if (!string.IsNullOrEmpty(Model.ClassFilter))
            {
                <p><strong>الصف:</strong> @Model.ClassFilter</p>
            }
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-header no-print">
                <i class="fas fa-table ms-1"></i>
                بيانات الحضور ليوم @Model.ReportDate.ToString("yyyy/MM/dd")
                <span class="badge bg-secondary ms-2">@Model.ReportData.Count طالب</span>
            </div>
            <div class="card-body">
                @if (Model.ReportData.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-right">الصف</th>
                                    <th class="text-right">اسم الطالب</th>
                                    <th class="text-right">الرقم الشخصي</th>
                                    <th class="text-center">الحالة</th>
                                    <th class="text-center">SMS</th>
                                    <th class="text-right">الجوال</th>
                                    <th class="text-right">ملاحظات</th>
                                    <th class="text-right">بواسطة</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ReportData)
                                {
                                    <tr class="@(item.Status == "Absent" ? "table-danger" : "")">
                                        <td class="text-right">@item.ClassName</td>
                                        <td class="text-right">@item.StudentName</td>
                                        <td class="text-right">@item.StudentId</td>
                                        <td class="text-center">
                                            @if(item.Status == "Absent")
                                            {
                                                <span class="badge bg-danger">غائب</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">حاضر</span>
                                            }
                                        </td>
                                        <td class="text-center">@item.SMS</td>
                                        <td class="text-right">@item.Mobile</td>
                                        <td class="text-right">
                                            @if (!string.IsNullOrEmpty(item.StudentNote))
                                            {
                                                <span class="text-info" title="Student Note">@item.StudentNote</span>
                                            }
                                            @if (!string.IsNullOrEmpty(item.AttendanceNote))
                                            {
                                                @if (!string.IsNullOrEmpty(item.StudentNote))
                                                {
                                                    <br />
                                                }
                                                <span class="text-warning small" title="Attendance Note"><i class="fas fa-clock ms-1"></i> @item.AttendanceNote</span>
                                            }
                                        </td>
                                        <td class="text-right small">@item.LastActionBy</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info">لم يتم العثور على سجلات تطابق الفلتر المختار.</div>
                }
            </div>
        </div>
    </div>
</div>
