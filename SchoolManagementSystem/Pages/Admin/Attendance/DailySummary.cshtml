@page
@model SchoolManagementSystem.Pages.Admin.Attendance.DailySummaryModel
@{
    ViewData["Title"] = "Daily Summary";
    Layout = "/Pages/Shared/_Layout.cshtml";
}

<style>
    @@media print {
        body * {
            visibility: hidden;
        }
        #printableArea, #printableArea * {
            visibility: visible;
        }
        #printableArea {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }
        .no-print {
            display: none !important;
        }
    }
</style>

<div class="container-fluid px-4">
    <nav aria-label="breadcrumb" class="mt-4 no-print">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">لوحة التحكم</a></li>
            <li class="breadcrumb-item"><a asp-page="/Admin/Attendance/Index" class="text-decoration-none">إدارة الغياب</a></li>
            <li class="breadcrumb-item active" aria-current="page">ملخص الغياب اليومي</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center mb-3 no-print">
        <a asp-page="/Admin/Attendance/Index" class="btn btn-outline-secondary ms-2" title="العودة لصفحة الغياب">
            <i class="fas fa-home"></i>
        </a>
        <h1 class="mb-0">ملخص الغياب اليومي</h1>
    </div>
    
    <div class="card mb-4 no-print shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-center">
                <div class="col-auto">
                    <label class="col-form-label fw-bold">التاريخ:</label>
                </div>
                <div class="col-auto">
                    <input type="date" asp-for="ReportDate" class="form-control" onchange="this.form.submit()" />
                </div>
                 <div class="col-auto me-auto">
                     <button type="button" class="btn btn-secondary ms-2" onclick="window.print()">
                         <i class="fas fa-print ms-1"></i> طباعة
                     </button>
                     <button type="submit" asp-page-handler="Export" class="btn btn-success ms-2">
                         <i class="fas fa-file-excel ms-1"></i> تصدير (CSV)
                     </button>
                     <a asp-page="DailyReport" class="btn btn-outline-primary">
                         <i class="fas fa-file-invoice ms-1"></i> تقرير مفصل
                     </a>
                    <input type="hidden" name="reportDate" value="@Model.ReportDate.ToString("yyyy-MM-dd")" />
                 </div>
            </form>
        </div>
    </div>

    <div id="printableArea">
        <div class="text-center mb-4 d-none d-print-block">
            <h2>تقرير غياب طلاب المدرسة</h2>
            <h4>التاريخ: @Model.ReportDate.ToString("yyyy/MM/dd")</h4>
        </div>

        <div class="card mb-4 shadow-sm">
            <div class="card-header no-print">
                <i class="fas fa-chart-bar ms-1"></i>
                بيانات إحصائية
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered table-striped">
                        <thead class="table-primary">
                            <tr>
                                <th>اسم الصف</th>
                                <th class="text-center">إجمالي الطلاب</th>
                                <th class="text-center text-success">حضور</th>
                                <th class="text-center text-danger">غياب</th>
                                <th class="text-center">نسبة الحضور %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var grade in Model.Summaries)
                            {
                                <tr>
                                    <td>@grade.GradeName</td>
                                    <td class="text-center">@grade.TotalStudents</td>
                                    <td class="text-center text-secondary">@grade.PresentCount</td>
                                    <td class="text-center text-danger fw-bold">@grade.AbsentCount</td>
                                    <td class="text-center">@grade.AttendancePercentage%</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light fw-bold text-dark">
                            <tr>
                                <td>المجموع الكلي</td>
                                <td class="text-center">@Model.OverallSummary.TotalStudents</td>
                                <td class="text-center">@Model.OverallSummary.TotalPresent</td>
                                <td class="text-center text-danger">@Model.OverallSummary.TotalAbsent</td>
                                <td class="text-center">@Model.OverallSummary.TotalPercentage%</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
