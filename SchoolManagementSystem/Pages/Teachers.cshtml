@page
@model SchoolManagementSystem.Pages.TeachersModel
@{
    ViewData["Title"] = "Teachers";
}

<div class="container mt-4">
    <h1>Teachers List</h1>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-page="./Teachers/Create" class="btn btn-success"><i class="fas fa-plus"></i> Add New Teacher</a>
        </div>
    }

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Search by Name or ID..." />
            <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> Search</button>
            <a asp-page="./Teachers" class="btn btn-secondary">Clear</a>
        </div>
    </form>

    @if (Model.Teachers != null && Model.Teachers.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                   <th>
                        <a asp-page="./Teachers" asp-route-sortOrder="@Model.IdSort">Teacher ID @(Model.CurrentSort == "id_desc" ? "↓" : "↑")</a>
                    </th>
                    <th>
                        <a asp-page="./Teachers" asp-route-sortOrder="@Model.NameSort">Name @(Model.CurrentSort == "name_desc" ? "↓" : "↑")</a>
                    </th>
                    <th>Mobile</th>
                    <th>Staff ID</th>
                    <th>Course Name</th>
                    <th>Grades</th>
                        <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var teacher in Model.Teachers)
                {
                    <tr>
                        <td>@teacher.TeachId</td>
                        <td>@teacher.TeachName</td>
                        <td>@teacher.TeachMobile</td>
                        <td>@teacher.StaffId</td>
                        <td>@teacher.Cousre?.CourseName</td>
                        <td>
                            @if(teacher.Relations != null && teacher.Relations.Any())
                            {
                                @string.Join(", ", teacher.Relations.Where(r => r.GradeNavigation != null).Select(r => r.GradeNavigation.GradeName))
                            }
                        </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-page="./Teachers/Details" asp-route-id="@teacher.TeachId" class="btn btn-sm btn-primary">
                                        <i class="fas fa-info-circle"></i> Details
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@teacher.TeachId" class="d-inline ms-1" onsubmit="return confirm('Are you sure you want to delete this teacher?');">
                                            <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></button>
                                        </form>
                                    }
                                </div>
                            </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No teachers found.</div>
    }
</div>