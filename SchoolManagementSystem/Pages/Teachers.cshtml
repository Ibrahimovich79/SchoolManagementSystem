@page
@model SchoolManagementSystem.Pages.TeachersModel
@{
    ViewData["Title"] = "قائمة الموظفين";
}

<div class="container mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-page="/Index" class="text-decoration-none">لوحة التحكم</a></li>
            <li class="breadcrumb-item active" aria-current="page">قائمة الموظفين</li>
        </ol>
    </nav>

    <div class="d-flex align-items-center mb-3">
        <a asp-page="/Index" class="btn btn-outline-secondary ms-2" title="العودة للرئيسية">
            <i class="fas fa-home"></i>
        </a>
        <h1 class="mb-0">قائمة الموظفين</h1>
    </div>
    
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="mb-3">
            <a asp-page="./Teachers/Create" class="btn btn-success"><i class="fas fa-plus"></i> إضافة موظف جديد</a>
        </div>
    }

    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="بحث بالاسم أو الرقم..." />
            <button class="btn btn-primary" type="submit"><i class="fas fa-search"></i> بحث</button>
            <a asp-page="./Teachers" class="btn btn-secondary">مسح</a>
        </div>
    </form>

    <style>
        .compact-table {
            font-size: 0.88rem;
            width: 100%;
            direction: rtl;
        }
        .compact-table td, .compact-table th {
            padding: 0.4rem 0.5rem !important;
            vertical-align: middle;
            text-align: right;
        }
        .assigned-classes {
            font-size: 0.75rem;
            display: block;
            margin-top: 2px;
        }
        .btn-compact {
            padding: 0.1rem 0.35rem;
            font-size: 0.75rem;
        }
    </style>

    @if (Model.Teachers != null && Model.Teachers.Any())
    {
        <div class="table-responsive">
            <table class="table table-sm table-striped table-hover compact-table">
                <thead class="table-light">
                    <tr>
                       <th style="width: 120px;">
                            <a asp-page="./Teachers" asp-route-sortOrder="@Model.IdSort" class="text-decoration-none">رقم الموظف @(Model.CurrentSort == "id_desc" ? "↓" : "↑")</a>
                        </th>
                        <th>
                            <a asp-page="./Teachers" asp-route-sortOrder="@Model.NameSort" class="text-decoration-none">الاسم</a>
                        </th>
                        <th style="width: 120px;">الجوال</th>
                        <th style="width: 130px;">الرقم الوظيفي</th>
                        <th style="width: 150px;">المادة</th>
                        <th style="width: 120px;" class="text-center">الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var teacher in Model.Teachers)
                    {
                        <tr>
                            <td>@teacher.TeachId</td>
                            <td>
                                <div class="fw-bold">@teacher.TeachName</div>
                                @if(teacher.Relations != null && teacher.Relations.Any())
                                {
                                    <span class="assigned-classes text-secondary">
                                        <i class="fas fa-chalkboard me-1"></i>
                                        @string.Join(", ", teacher.Relations.Where(r => r.GradeNavigation != null).Select(r => r.GradeNavigation.GradeName))
                                    </span>
                                }
                            </td>
                            <td>@teacher.TeachMobile</td>
                            <td>@teacher.StaffId</td>
                            <td>@teacher.Cousre?.CourseName</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">
                                    <a asp-page="./Teachers/Details" asp-route-id="@teacher.TeachId" class="btn btn-primary btn-compact" title="التفاصيل">
                                        <i class="fas fa-info-circle"></i>
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <form method="post" asp-page-handler="Delete" asp-route-id="@teacher.TeachId" class="d-inline ms-1" onsubmit="return confirm('هل أنت متأكد من حذف هذا الموظف؟');">
                                            <button type="submit" class="btn btn-danger btn-compact" title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">لم يتم العثور على موظفين.</div>
    }
</div>